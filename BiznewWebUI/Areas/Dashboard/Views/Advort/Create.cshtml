@model Advort

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="AdvortName"></label>
        <input type="text" asp-for=AdvortName value="" class="form-control" />
        <span asp-validation-for="AdvortName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link"></label>
        <input type="url" asp-for=Link value="" class="form-control" />
        <span asp-validation-for="Link"></span>
    </div>
    <div class="form-group">
        <label for="Photo">Photo</label>
        <input type="file" name="Photo" accept="image/*" class="form-control-file" />
       
    </div>

    @if (User.IsInRole("Admin"))
    {

    <div class="form-group">
      <label asp-for="IsPublished"></label>
            <input type="checkbox" asp-for=IsPublished value="" />
            <span asp-validation-for="IsPublished"></span>
    </div>
    }
    <button type="submit" class="btn btn-info" value="">Create</button>
</form>