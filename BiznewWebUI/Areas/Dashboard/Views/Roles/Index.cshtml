@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    Layout = "_AdminLayout";
    var counter = 0;
}
<table class="table table-bordered">
    <div asp-validation-summary="All" class="text text-danger"></div>
    <div class="mx-auto"><a class="btn btn-outline-success" asp-controller="Roles" asp-action="create">Create Role</a></div>
    <thead>
        
        <tr>
            <td>#</td>
            <td>Role Name</td>
            <td>Actions</td>
            <td>Actions Info</td>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <td>@counter</td>
                <td>@item.Name</td>
           
                <td>  <a class="btn btn-danger" asp-area="dashboard" asp-controller="tag" asp-action="Delete" asp-route-roleId="@item.Id">Delete</a> <a class="btn btn-warning mx-3" asp-area="dashboard" asp-controller="roles" asp-action="Edit" asp-route-roleId="@item.Id">Edit</a></td>
                <td>#</td>
            </tr>
        }
    </tbody>
</table>